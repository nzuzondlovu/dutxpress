@model FinalDutExpressSystem.Models.RegisterViewModel
@{
    ViewBag.Title = "Register Role";
}

<h2>Register Role</h2>
@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a New Acoount </h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Select User", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
        
            @Html.DropDownListFor(model => model.UserName, ViewBag.UserName as List<SelectListItem>, "Select User", new { @class = "form-control" })
        </div>

        <div class="form-group glyphicon-align-center">
            @Html.Label("Select User", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                
                @Html.DropDownListFor(model => model.Name, ViewBag.Name as List<SelectListItem>, "Select Role", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />

            </div>
        </div>

    </div>}
@section  Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

