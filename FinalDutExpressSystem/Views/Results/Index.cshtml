@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Enter Student Number", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("studentNo")
            <input type="submit" value="Search" class="btn btn-success" />

        </div>
    </div>
}
<table class=" table-responsive table table-bordered table-hover table-striped">
    <tr class=" success">
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IS)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class=" danger">
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IS)
            </td>

        </tr>
    }

</table>
