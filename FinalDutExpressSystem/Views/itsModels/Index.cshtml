@model IEnumerable<FinalDutExpressSystem.Models.itsModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
<div class="form-group">
    @Html.Label("Find By Student Number", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
         @Html.TextBox("searchString")
        <input type="submit" value="Search" class="btn btn-success" />
       
    </div>
</div>

}
<table class=" table-responsive table table-bordered table-hover table-striped">
    <tr class=" success">
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mark1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mark2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mark3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mark4)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class=" danger">
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark4)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
